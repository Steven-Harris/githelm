{
  "name": "githelm",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "build": "vite build",
    "serve": "vite preview",
    "postinstall": "pnpm svelte-kit sync",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Steven-Harris/githelm.git"
  },
  "author": "steven-harris",
  "bugs": {
    "url": "https://github.com/Steven-Harris/githelm/issues"
  },
  "homepage": "https://githelm.com",
  "dependencies": {
    "@sentry/browser": "^9.15.0",
    "@sentry/svelte": "^9.15.0",
    "@sentry/sveltekit": "^9.15.0",
    "@sentry/vite-plugin": "^3.3.1",
    "firebase": "^11.6.0",
    "graphql": "^16.10.0",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@tsconfig/svelte": "5.0.4",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vite-pwa/sveltekit": "^0.6.8",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "firebase-tools": "^14.2.2",
    "jsdom": "^26.1.0",
    "msw": "^2.7.5",
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5",
    "svelte": "^5.27.0",
    "svelte-check": "^4.1.6",
    "svelte-preprocess": "^6.0.3",
    "tslib": "2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^2.1.9",
    "workbox-window": "^7.3.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@sentry/cli",
      "esbuild",
      "msw",
      "protobufjs",
      "re2",
      "sharp",
      "svelte-preprocess"
    ]
  }
}